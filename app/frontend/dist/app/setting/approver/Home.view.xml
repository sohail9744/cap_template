<mvc:View
	xmlns:core="sap.ui.core"
	controllerName="wisys.frontend.app.setting.approver.Home"
	xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true"
	xmlns="sap.m"
>
	<Page showHeader="false">
		<content>
			<Table
				sticky="ColumnHeaders,HeaderToolbar"
				items="{
					path: 'mainTableModel>/'
				}"
			>
				<headerToolbar>
					<Toolbar>
						<Title text="{= 'Setting (' + ${mainTableModel>/}.length})" />
						<ToolbarSpacer />
						<Button
							icon="sap-icon://add"
							type="Emphasized"
							text="New Record"
							press="onAddSettingRow"
						/>
						<Button
							tooltip="Sort"
							icon="sap-icon://sort"
							press="handleSortButtonPressed"
						/>
						<Button
							tooltip="Filter"
							icon="sap-icon://filter"
							press="handleFilterButtonPressed"
						/>
						<Button
							tooltip="Group"
							icon="sap-icon://group-2"
							press="handleGroupButtonPressed"
						/>
						<SearchField
							width="30%"
							liveChange="onSearch"
						/>
					</Toolbar>
				</headerToolbar>
				<columns>
					<Column
						minScreenWidth="Tablet"
						demandPopin="true"
					>
						<Text text="User Id" />
					</Column>
					<!-- <Column
						minScreenWidth="Tablet"
						demandPopin="true"
					>
						<Text text="Full Name" />
					</Column> -->
					<Column
						minScreenWidth="Tablet"
						demandPopin="true"
					>
						<Text text="Sites" />
					</Column>
					<Column
						minScreenWidth="Tablet"
						demandPopin="true"
					>
						<Text text="Level" />
					</Column>
					<Column
						minScreenWidth="Tablet"
						demandPopin="true"
					>
						<Text text="" />
					</Column>
				</columns>
				<items>
					<ColumnListItem vAlign="Middle">
						<cells>
							<Text text="{mainTableModel>userId}" />
							<!-- <Text text="{mainTableModel>userName}" /> -->
							<Select
								items="{siteTableModel>/}"
								selectedKey="{mainTableModel>site_SiteId}"
								editable="false"
							>
								<core:Item
									text="{siteTableModel>SiteName}"
									key="{siteTableModel>SiteId}"
								/>
							</Select>
							<!-- <Text text="{mainTableModel>site_SiteId}" /> -->
							<Text text="{mainTableModel>approvalLevel}" />
							<Button
								icon="sap-icon://delete"
								press="onDelete"
							/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
	</Page>
</mvc:View>