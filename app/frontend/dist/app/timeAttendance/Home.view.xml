<mvc:View
    controllerName="wisys.frontend.app.timeAttendance.Home"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    displayBlock="true"
    height="100%"
    busyIndicatorDelay="0"
    xmlns:core="sap.ui.core"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:table="sap.ui.table"
    xmlns:u="sap.ui.unified"
>
    <Page showHeader="false">
        <content>
            <fb:FilterBar
                id="filterbar"
                useToolbar="false"
                showFilterConfiguration="false"
                search="onGenerateButton"
            >
                <fb:filterGroupItems>
                    <fb:FilterGroupItem
                        name="suppName"
                        label="Supplier Name"
                        groupName="Group1"
                        visibleInFilterBar="true"
                    >
                        <fb:control>
                            <ComboBox
                                id="idSuppListComboBox"
                                name="suppName"
                                selectionchange="onSelectionChange"
                                items="{filterModel>/suppList}"
                            >
                                <core:Item
                                    key="{filterModel>SupplierCode}"
                                    text="{filterModel>SupplierName} - {filterModel>SupplierCode}"
                                />
                            </ComboBox>
                        </fb:control>
                    </fb:FilterGroupItem>
                    <fb:FilterGroupItem
                        name="Month"
                        label="Month"
                        groupName="Group1"
                        visibleInFilterBar="true"
                    >
                        <fb:control>
                            <ComboBox
                                id="idMonthComboBox"
                                name="Month"
                                selectionchange="onSelectionChange"
                                items="{filterModel>/month}"
                            >
                                <core:Item
                                    key="{filterModel>key}"
                                    text="{filterModel>month}"
                                />
                            </ComboBox>
                        </fb:control>
                    </fb:FilterGroupItem>
                    <fb:FilterGroupItem
                        name="Year"
                        label="Year"
                        groupName="Group1"
                        visibleInFilterBar="true"
                    >
                        <fb:control>
                            <ComboBox
                                id="idYearComboBox"
                                name="Year"
                                items="{filterModel>/currentYear}"
                            >
                                <core:Item
                                    key="{filterModel>year}"
                                    text="{filterModel>year}"
                                />
                            </ComboBox>
                        </fb:control>
                    </fb:FilterGroupItem>
                    <!-- <fb:FilterGroupItem
                        name="ShiftType"
                        label="Shift Type"
                        groupName="ShiftType"
                        visibleInFilterBar="true"
                    >
                        <fb:control>
                            <ComboBox
                                id="idShiftType"
                                name="ShiftType"
                            >
                                <core:Item
                                    key="D"
                                    text="Day"
                                />
                                <core:Item
                                    key="N"
                                    text="Night"
                                />
                            </ComboBox>
                        </fb:control>
                    </fb:FilterGroupItem> -->
                </fb:filterGroupItems>
            </fb:FilterBar>
            <table:Table
                id="idTable"
                visible="{= ${empData>/}.length === 0 ? false : true}"
                visibleRowCount="9"
                selectionMode="None"
                rows="{empData>/}"
            >
                <table:extension>
                    <OverflowToolbar>
                        <Title
                            id="title"
                            text="{= 'Total Employee (' + ${empData>/}.length + ')'}"
                        />
                    </OverflowToolbar>
                </table:extension>
                <table:columns>
                    <table:Column width="6rem">
                        <Label text="Supplier Phone" />
                        <table:template>
                            <Text text="{empData>SupplierPhone}" />
                        </table:template>
                    </table:Column>
                    <table:Column width="8rem">
                        <Label text="Supplier Contract No" />
                        <table:template>
                            <Text text="{empData>SupplierContractNum}" />
                        </table:template>
                    </table:Column>
                    <table:Column width="5rem">
                        <Label text="Site ID" />
                        <table:template>
                            <Text text="{empData>Site_SiteId}" />
                        </table:template>
                    </table:Column>
                    <table:Column width="4rem">
                        <Label text="Emp Id" />
                        <table:template>
                            <Text text="{empData>employeeId}" />
                        </table:template>
                    </table:Column>
                     <table:Column width="8rem">
                        <Label text="Shift Type" />
                        <table:template>
                            <Text text="{empData>ShiftType}" />
                        </table:template>
                    </table:Column>
                 <!--   <table:Column width="6rem">
