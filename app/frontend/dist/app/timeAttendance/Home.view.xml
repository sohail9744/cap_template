        <footer>
            <OverflowToolbar>
                <ToolbarSpacer />
                <Button
                    id="idCreateRequestButton"
                    enabled="{= ${empData>/}.length > 0 ? true : false}"
                    text="Create Request"
                    type="Emphasized"
                    press="onCreateRequest"
                    class="sapUiTinyMargin"
                    ariaHasPopup="Dialog"
                />
                <ToolbarSpacer />
            </OverflowToolbar>
