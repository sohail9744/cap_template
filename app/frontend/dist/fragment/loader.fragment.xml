<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        class="sapUiContentPadding"
        showHeader="false"
    >
        <content>
            <IllustratedMessage
                illustrationSize="Auto"
                illustrationType="{loader>/illustrationType}"
                title="{loader>/title}"
                description="{loader>/description}"
            />
            <ProgressIndicator
                class="sapUiSmallMarginBottom"
                percentValue="{loader>/percent}"
                displayValue="{loader>/displayValue}"
                state="Information"
            />
            <!-- <FlexBox justifyContent="Center"> -->
            <MessageStrip
                text="DONT REFERESH YOUR SYSTEM IT WILL EFFECT TO DATA LOSS"
                type="Error"
                showIcon="true"
                customIcon="sap-icon://locked"
            />
            <!-- </FlexBox> -->
        </content>
    </Dialog>
</core:FragmentDefinition>
