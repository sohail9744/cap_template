<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <ViewSettingsDialog confirm="handleFilterDialogConfirm">
        <filterItems>
            <ViewSettingsFilterItem
                text="Supplier Name"
                key="supplierName"
                multiSelect="false"
                items="{/getEmployeeData/}"
            >
                <items>
                    <ViewSettingsItem text="{SupplierName}">
                        <customData>
                            <core:CustomData key="SupplierName" />
                        </customData>
                    </ViewSettingsItem>
                </items>
            </ViewSettingsFilterItem>
            <ViewSettingsFilterItem
                text="Supplier Code"
                key="supplierCode"
                multiSelect="false"
                items="{/getEmployeeData/}"
            >
                <items>
                    <ViewSettingsItem text="{SupplierCode}">
                        <customData>
                            <core:CustomData key="SupplierCode" />
                        </customData>
                    </ViewSettingsItem>
                </items>
            </ViewSettingsFilterItem>
            <ViewSettingsFilterItem
                text="Profession"
                key="Profession"
                multiSelect="false"
                items="{/getEmployeeData/}"
            >
                <items>
                    <ViewSettingsItem text="{Profession}">
                        <customData>
                            <core:CustomData key="Profession" />
                        </customData>
                    </ViewSettingsItem>
                </items>
            </ViewSettingsFilterItem>
            <ViewSettingsFilterItem
                text="Business Unit"
                key="businessUnit"
                multiSelect="false"
                items="{/BusinessData/}"
            >
                <items>
                    <ViewSettingsItem text="{BusinessUnitName}">
                        <customData>
                            <core:CustomData key="BusinessUnit/BusinessUnitName" />
                        </customData>
                    </ViewSettingsItem>
                </items>
            </ViewSettingsFilterItem>
            <ViewSettingsFilterItem
                text="Site"
                key="site"
                multiSelect="false"
                items="{/SiteData/}"
            >
                <items>
                    <ViewSettingsItem
                        text="{SiteName}"
                        key="{SiteName}"
                    >
                        <customData>
                            <core:CustomData key="Site/SiteName" />
                        </customData>
                    </ViewSettingsItem>
                </items>
            </ViewSettingsFilterItem>
        </filterItems>
    </ViewSettingsDialog>
</core:FragmentDefinition>
