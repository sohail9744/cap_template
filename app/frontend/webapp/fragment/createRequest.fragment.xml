<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
>
    <Dialog
        title="Do you want to submit the request?"
        state="Warning"
        type="Message"
    >
        <content>
            <form:SimpleForm
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanXL="3"
                labelSpanL="3"
                labelSpanM="3"
                labelSpanS="12"
                adjustLabelSpan="false"
                emptySpanXL="4"
                emptySpanL="4"
                emptySpanM="4"
                columnsXL="2"
                columnsL="2"
                columnsM="1"
                singleContainerFullSize="false"
            >
                <form:content>
                    <!-- Location Label and ComboBox -->
                    <Label
                        required="true"
                        text="HR Admin Location"
                        design="Bold"
                    />
                    <ComboBox
                        items="{filterModel>/approvers}"
                        placeholder="Select location"
                    >
                        <core:Item
                            key="{filterModel>userId}"
                            text="{filterModel>site/SiteName}"
                        />
                    </ComboBox>
                    <!-- Comment Box -->
                    <Label
                        required="true"
                        text="Comments"
                        design="Bold"
                    />
                    <TextArea
                        placeholder="Enter your comments"
                        rows="4"
                        width="100%"
                    />
                </form:content>
            </form:SimpleForm>
        </content>
        <beginButton>
            <Button
                text="Submit"
                type="Accept"
                press="onSubmit"
            />
        </beginButton>
        <endButton>
            <Button
                text="Close"
                type="Attention"
                press="onCloseButtonPress"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
