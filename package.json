{
  "name": "cap_proeject",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@cap-js/hana": "^1",
    "@sap/cds": "^8",
    "@sap/xssec": "^4",
    "express": "^4"
  },
  "devDependencies": {
    "@cap-js/cds-types": "^0.9.0",
    "@cap-js/sqlite": "^1",
    "@sap/cds-dk": "^8",
    "cds-plugin-ui5": "^0.9.3",
    "husky": "^9.1.7",
    "mbt": "^1.2.29",
    "rimraf": "^5.0.5"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-dashboard": "cds watch --open wisys.dashboard/index.html?sap-ui-xx-viewCache=false --livereload false",
    "undeploy": "cf undeploy cap_proeject --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1",
    "ui5-helper": "node ./node_modules/ui5-helper/dist/bundle.js",
    "prepare": "husky"
  },
  "sapux": [
    "app/admin-books",
    "app/browse"
  ],
  "cds": {
    "requires": {
      "auth": "dummy",
      "connectivity": true,
      "destinations": true,
      "SF_V": {
        "kind": "odata-v2",
        "credentials": {
          "destination": "SF_API"
        }
      }
    },
    "sql": {
      "native_hana_associations": false
    }
  },
  "workspaces": [
    "app/*"
  ]
}
